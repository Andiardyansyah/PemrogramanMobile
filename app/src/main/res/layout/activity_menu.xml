<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pradita"
        android:layout_above="@+id/btnmahasiswa"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mhs"
        android:layout_centerVertical="true"
        android:id="@+id/btnmahasiswa"
        android:layout_marginStart="50dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mk"
        android:layout_toEndOf="@+id/btnmahasiswa"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:id="@+id/btnmatakuliah"
        />


</RelativeLayout>